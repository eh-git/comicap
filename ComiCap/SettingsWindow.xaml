<Window x:Class="ComiCap.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComiCap"
        mc:Ignorable="d"
        Title="設定 - ComiCap"
        Height="450"
        Width="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 保存先設定 -->
        <GroupBox Grid.Row="0" Header="保存先設定" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="デフォルト保存先:" />
                <TextBox Grid.Row="1" Grid.Column="0"
                         x:Name="SaveDirectoryTextBox"
                         IsReadOnly="True"
                         Margin="0,5,10,0"
                         VerticalContentAlignment="Center"
                         Height="30"/>
                <Button Grid.Row="1" Grid.Column="1"
                        x:Name="BrowseButton"
                        Content="参照..."
                        Width="80"
                        Height="30"
                        Margin="0,5,0,0"
                        Click="BrowseButton_Click"/>
            </Grid>
        </GroupBox>

        <!-- 画像形式設定 -->
        <GroupBox Grid.Row="1" Header="画像形式設定" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Content="デフォルト画像形式:" />
                <ComboBox Grid.Row="1"
                          x:Name="ImageFormatComboBox"
                          Height="30"
                          Margin="0,5,0,0"
                          SelectionChanged="ImageFormatComboBox_SelectionChanged"/>
            </Grid>
        </GroupBox>

        <!-- JPEG品質設定 -->
        <GroupBox Grid.Row="2" Header="JPEG品質設定" Margin="0,0,0,15" x:Name="JpegQualityGroupBox">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="JPEG品質 (0-100):" />
                <Label Grid.Row="0" Grid.Column="1" x:Name="JpegQualityLabel" Content="90" FontWeight="Bold" Margin="5,0,0,0"/>

                <Slider Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                        x:Name="JpegQualitySlider"
                        Minimum="0"
                        Maximum="100"
                        TickFrequency="10"
                        TickPlacement="BottomRight"
                        IsSnapToTickEnabled="True"
                        Value="90"
                        Margin="0,5,0,0"
                        ValueChanged="JpegQualitySlider_ValueChanged"/>
            </Grid>
        </GroupBox>

        <!-- ボタン -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="ResetButton"
                    Content="デフォルトに戻す"
                    Width="130"
                    Height="35"
                    Margin="0,0,10,0"
                    Click="ResetButton_Click"/>
            <Button x:Name="OkButton"
                    Content="OK"
                    Width="80"
                    Height="35"
                    Margin="0,0,10,0"
                    IsDefault="True"
                    Click="OkButton_Click"/>
            <Button x:Name="CancelButton"
                    Content="キャンセル"
                    Width="80"
                    Height="35"
                    IsCancel="True"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
