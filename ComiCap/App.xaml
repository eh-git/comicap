<Application x:Class="ComiCap.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ComiCap"
             xmlns:tb="http://schemas.lepo.co/wpfui/2022/xaml/taskbar">
    <Application.Resources>
        <!-- システムトレイアイコン -->
        <tb:TaskbarIcon x:Key="TrayIcon"
                       IconSource="icon.ico"
                       ToolTipText="ComiCap - Screen Capture Utility"
                       MenuActivation="RightClick">
            <tb:TaskbarIcon.Menu>
                <ContextMenu>
                    <MenuItem Header="表示(_O)" Click="MenuItem_Open_Click" />
                    <MenuItem Header="キャプチャ(_C)" Click="MenuItem_Capture_Click" />
                    <MenuItem Header="範囲を選択してキャプチャ(_R)" Click="MenuItem_RegionCapture_Click" />
                    <MenuItem Header="スライド自動キャプチャ(_L)" Click="MenuItem_SlideCapture_Click" />
                    <MenuItem Header="名前を付けて保存(_S)" Click="MenuItem_SaveAs_Click" />
                    <Separator />
                    <MenuItem Header="設定(_T)" Click="MenuItem_Settings_Click" />
                    <Separator />
                    <MenuItem Header="終了(_X)" Click="MenuItem_Exit_Click" />
                </ContextMenu>
            </tb:TaskbarIcon.Menu>
        </tb:TaskbarIcon>
    </Application.Resources>
</Application>
